@model BibliotecaDigital.Application.ViewModels.AutorViewModel

@{
    ViewData["Title"] = "Novo Autor";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Cadastrar Novo Autor</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo do autor" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="exemplo@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DataNascimento" class="form-label"></label>
                            <input asp-for="DataNascimento" type="date" class="form-control" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nacionalidade" class="form-label"></label>
                            <input asp-for="Nacionalidade" class="form-control" placeholder="Ex: Brasileiro, Americano..." />
                            <span asp-validation-for="Nacionalidade" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Biografia" class="form-label"></label>
                            <textarea asp-for="Biografia" class="form-control" rows="5" placeholder="Conte um pouco sobre o autor..."></textarea>
                            <span asp-validation-for="Biografia" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}