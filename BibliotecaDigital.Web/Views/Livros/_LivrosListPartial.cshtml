@model IEnumerable<BibliotecaDigital.Application.ViewModels.LivroViewModel>

<div class="table-responsive">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Título</th>
                    <th>ISBN</th>
                    <th>Autor</th>
                    <th>Editora</th>
                    <th>Ano</th>
                    <th>Páginas</th>
                    <th>Preço</th>
                    <th class="text-center" style="width: 200px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var livro in Model)
                {
                    <tr>
                        <td>@livro.Titulo</td>
                        <td>@livro.ISBN</td>
                        <td>@(livro.NomeAutor ?? "N/A")</td>
                        <td>@livro.Editora</td>
                        <td>@livro.AnoPublicacao</td>
                        <td>@livro.NumeroPaginas</td>
                        <td>@livro.Preco.ToString("C")</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="/Livros/Details/@livro.Id" class="btn btn-sm btn-info" title="Detalhes">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Livros/Edit/@livro.Id" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Livros/Delete/@livro.Id" class="btn btn-sm btn-danger" title="Excluir">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-exclamation-triangle"></i> Nenhum livro encontrado.
        </div>
    }
</div>
